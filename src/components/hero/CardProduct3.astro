---
import { Image } from "astro:assets";

import florAzul from "../../../public/images/florAzul.svg";

interface Props {
    image: string;
    className?: string;
}

const { image, className = "" }: Props = Astro.props;
---

<div
    class={`text-center bg-clara-blue-dark rounded-[28px] shadow-md px-4 flex flex-col items-center justify-start relative w-full h-full hover:scale-105 transition-transform duration-500 min-h-[398px] md:overflow-visible overflow-hidden ${className}`}
>
    <Image
        src={florAzul}
        alt="Flor"
        width="150"
        height="150"
        class="absolute -left-4 -top-16"
    />
    <Image
        src={image}
        alt="Producto 2"
        width="220"
        height="220"
        class="rounded-lg z-10"
    />
</div>
