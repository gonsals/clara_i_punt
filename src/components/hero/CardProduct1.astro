---
import { Image } from "astro:assets";
import florDreta from "../../../public/images/florDreta.svg";
import florEsquerra from "../../../public/images/florEsquerra.svg";

interface Props {
    image: string;
    className?: string;
}

const { image, className = "" }: Props = Astro.props;
---

<div
    style={{ display: "flex", justifyContent: "center", alignItems: "center" }}
    class={`text-center bg-clara-pink-light rounded-[28px] p-4 shadow-md w-full  relative hover:scale-105 transition-transform duration-500 min-h-[398px] ${className}`}
>
    <Image
        src={florDreta}
        alt="Flor Dreta"
        width="100"
        height="100"
        class="absolute bottom-0 right-0 z-20"
    />
    <Image
        src={florEsquerra}
        alt="Flor Esquerra"
        width="100"
        height="100"
        class="absolute top-0 left-0 z-20"
    />
    <Image
        src={image}
        alt="Producto 1"
        width="200"
        height="200"
        class="rounded-lg"
    />
</div>
